<%- include('layout') %>

<div class="container mx-auto max-w-md">
    <h2 class="text-center text-2xl mb-4">Register</h2>
    <form action="/auth/register" method="POST" class="bg-white p-6 shadow rounded">
        <input type="text" name="username" placeholder="Username" required class="border p-2 w-full mb-4">
        <input type="password" name="password" placeholder="Password" required class="border p-2 w-full mb-4">
        <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded w-full">Register</button>
    </form>
</div>
